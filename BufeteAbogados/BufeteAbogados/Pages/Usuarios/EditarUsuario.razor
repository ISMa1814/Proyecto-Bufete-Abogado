@page "/Usuarios/Editar/{Codigo}"

<EditForm Model="@user">
    <DataAnnotationsValidator />
    <h3>Editar Usuario</h3>
    <hr />

    <div class="from-group row">
        <label for="Codigo" class="col-sm-2 col-from-label">
            Código
        </label>
        <div class="col-sm-10">
            <InputText id="Codigo" class="form-control" placeholder="Codigo" @bind-Value="user.Codigo" />
            <ValidationMessage For="@(() => user.Codigo)" />
        </div>
    </div>
    <div class="from-group row">
        <label for="Clave" class="col-sm-2 col-from-label">
            Clave
        </label>
        <div class="col-sm-10">
            <InputText id="Clave" class="form-control" placeholder="Clave" @bind-Value="user.Clave" type="password" />
            <ValidationMessage For="@(() => user.Clave)" />
        </div>
    </div>

    <div class="from-group row">
        <label for="Nombre" class="col-sm-2 col-from-label">
            Nombre
        </label>
        <div class="col-sm-10">
            <InputText id="Nombre" class="form-control" placeholder="Nombre" @bind-Value="user.Nombre" />
            <ValidationMessage For="@(() => user.Nombre)" />
        </div>
    </div>

    <div class="from-group row">
        <label for="Apellido" class="col-sm-2 col-from-label">
            Apellido
        </label>
        <div class="col-sm-10">
            <InputText id="Apellido" class="form-control" placeholder="Apellido" @bind-Value="user.Apellido" />
            <ValidationMessage For="@(() => user.Apellido)" />
        </div>
    </div>

    <div class="from-group row">
        <label for="EstaActivo" class="col-sm-2 col-from-label">
            Esta Activo
        </label>
        <div class="col-sm-10">
            <InputCheckbox @bind-Value="user.EstaActivo" />
        </div>
    </div>

    <div class="form-group row">
        <p>
            <input type="submit" class="btn-toolbar btn-primary" value="Guardar" @onclick="Guardar" />
            <input type="submit" class="btn-toolbar btn-danger" value="Cancelar" @onclick="Cancelar" />
            <input type="submit" class="btn-toolbar btn-warning" value="Eliminar" @onclick="Eliminar" />
        </p>
    </div>

</EditForm>

